<div class="panel-body">
    <?php if(count($errors) > 0): ?>
        <div class="alert alert-danger alert-danger-register">
            <strong>Ой!</strong><?php echo e(trans('auth.issue')); ?><br><br>
            <ul>
                <?php foreach($errors->all() as $error): ?>
                    <li><?php echo e($error); ?></li>
                <?php endforeach; ?>
            </ul>
        </div>
    <?php endif; ?>

    <form class="form-register form-horizontal" role="form" method="POST" action="<?php echo e(url('/auth/register')); ?>">
        <input type="hidden" name="_token" value="<?php echo e(csrf_token()); ?>">

        <div class="form-group">
            <label class="col-md-4 control-label"><?php echo e(trans('auth.name')); ?></label>
            <div class="col-md-6">
                <input type="text" placeholder="<?php echo e(trans('auth.name')); ?>" class="form-control" name="name"
                       value="<?php echo e(old('name')); ?>">
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-4 control-label"><?php echo e(trans('auth.email')); ?></label>
            <div class="col-md-6">
                <input type="email" placeholder="<?php echo e(trans('auth.email')); ?>" class="form-control" name="email"
                       value="<?php echo e(old('email')); ?>">
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-4 control-label"><?php echo e(trans('auth.password')); ?></label>
            <div class="col-md-6">
                <input type="password" placeholder="<?php echo e(trans('auth.password')); ?>" class="form-control" name="password">
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-4 control-label"><?php echo e(trans('auth.confirmpassword')); ?></label>
            <div class="col-md-6">
                <input type="password" placeholder="<?php echo e(trans('auth.confirmpassword')); ?>" class="form-control"
                       name="password_confirmation">
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-6 col-md-offset-4">
                <div class="checkbox">
                    <label>
                        <input required type="checkbox" title="<?php echo e(trans('auth.checkbox')); ?>"><span><?php echo e(trans('auth.with')); ?></span>
                        <a href="<?php echo e(route('policy')); ?>" target="_blank"><?php echo e(trans('auth.policy')); ?></a>
                        <span><?php echo e(trans('auth.agree')); ?></span>
                    </label>
                </div>
                <button type="submit" tabindex="1" class="btn btn-primary register-button">
                    <?php echo e(trans('auth.signup')); ?>

                </button>
            </div>
        </div>
    </form>
</div>

<script type="text/javascript">
    $('.form-register').submit(function (event) {
        event.preventDefault();
        var form = $(this),
            spiner = $(document.createElement('i')).addClass('fa fa-spinner fa-spin fa-2x');
        $.ajax({
            type: 'POST',
            url: '<?php echo e(route('auth.ajaxValidation')); ?>',
            data: form.serialize(),
            beforeSend: function () {
                form.find('[type="submit"]')
                    .append(spiner);
            },
            success: function (data) {
                if (data['success']) {
                    form.unbind('submit').submit();
                } else {
                    if (form.prev().hasClass('alert-danger-register')) {
                        form.prev().remove();
                    }
                    form.before(data['errors']);
                }
            },
            complete: function () {
                spiner.remove();
            },
            error: function (e) {
                console.log(e);
            }
        });
    });
</script>
