<link href="<?php echo e(asset('/css/breadcrumb.css')); ?>" rel="stylesheet">


    <div class="routeBreadcrumb">
        <ol class="breadcrumb">
            <?php foreach($breadcrumbs as $breadcrumb): ?>
                <?php if( !$breadcrumb['url'] ): ?>
                    <li class="active" href=""><?php echo e($breadcrumb['name']); ?></li>
                <?php else: ?>
                    <li><a href="<?php echo e(route($breadcrumb['url'])); ?>"><?php echo e($breadcrumb['name']); ?></a> </li>
                <?php endif; ?>
            <?php endforeach; ?>
        </ol>
    </div>