    <script>
        function blockVacancy() {
            var dialogResult = confirm("Ви дійсно бажаєте заблокувати вакансію?");
            if(dialogResult) {
                $.post( '/vacancy/block', {_token: '<?php echo e(csrf_token()); ?>', id: '<?php echo e($vacancy->id); ?>'},
                    function( data ) {
                        location="<?php echo e(URL::to('vacancy')); ?>";
                    });
            }
        }
    </script>
