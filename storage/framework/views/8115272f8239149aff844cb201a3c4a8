    <script>
        function blockResume() {
            var dialogResult = confirm("Ви дійсно бажаєте заблокувати резюме?");
            if(dialogResult) {
                $.post( '/resume/block',{_token: '<?php echo e(csrf_token()); ?>', id: '<?php echo e($resume->id); ?>' },
                    function( data ) {
                    location="<?php echo e(URL::to('resume')); ?>";
                });
            }
        }
    </script>

